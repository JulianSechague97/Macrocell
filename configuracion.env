# ============================================
# CONFIGURACIÓN DEL PROYECTO MACROCELL
# ============================================

# Puerto del servidor
PORT=3000

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=2801
DB_NAME=proyecto_macrocell
DB_PORT=3306

# ============================================
# SEGURIDAD
# ============================================
# Generar una clave secreta aleatoria para JWT
# Puedes usar: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_clave_secreta_muy_segura_aqui_cambiar_en_produccion

# Tiempo de expiración de tokens (en segundos)
JWT_EXPIRES_IN=86400

# Número de rondas para bcrypt (10-12 recomendado)
BCRYPT_ROUNDS=10

# ============================================
# ENTORNO
# ============================================
NODE_ENV=development

# ============================================
# CORS (frontend URL permitido)
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# CONFIGURACIÓN DE SESIONES
# ============================================
SESSION_SECRET=otra_clave_secreta_para_sesiones_cambiar_en_produccion

# ============================================
# NOTAS:
# - NO subir este archivo a GitHub (.gitignore)
# - Cambiar todas las claves en producción
# - Mantener DB_PASSWORD seguro
# ============================================